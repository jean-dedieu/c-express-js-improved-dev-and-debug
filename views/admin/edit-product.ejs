<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if(editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Titre</label>
                <input type="text" name="title" id="title" value="<%= product.title %><% if(editing) { %><% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">URL de Photo</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= product.imageUrl %><% if(editing) { %><% } %>">
            </div>
            <div class="form-control">
                <label for="price">Prix</label>
                <input type="number" name="price" id="price" step="0.01" value="<%= product.price %><% if(editing) { %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if(editing) { %><%= product.description %><% } %></textarea>
            </div>

            <button class="btn" type="submit"><% if (editing) {  %>Modifier le produit<% } else { %>Ajout produit<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>